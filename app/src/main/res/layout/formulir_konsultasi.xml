<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff">
    <ImageView
        android:id="@+id/imgSeparator"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"/>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/imgSeparator">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Judul Pengaduan :"
                android:layout_marginBottom="10dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#565353"/>
            <EditText
                android:id="@+id/edtjudul"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="@string/juduladuan"
                android:textColorHint="#515058"
                android:textColor="@color/textform_color"
                android:textSize="14sp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/form"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Isi Pengaduan :"
                android:layout_marginBottom="10dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#565353"/>
            <EditText
                android:id="@+id/edtisi"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="@string/juduladuan"
                android:textColorHint="#515058"
                android:textColor="@color/textform_color"
                android:textSize="14sp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/form"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Isi Pengaduan :"
                android:layout_marginBottom="10dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#565353"/>
            <EditText
                android:id="@+id/edtlokasi"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="@string/juduladuan"
                android:textColorHint="#515058"
                android:textColor="@color/textform_color"
                android:textSize="14sp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/form"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="Topik :"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"
                />

            <!-- Spinner -->

            <id.pemkot.pot.spinner.MaterialSpinner
                android:id="@+id/spinnertopik"
                app:ms_dropdown_max_height="350dp"
                app:ms_dropdown_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="Instansi :"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"
                />

            <!-- Spinner Element -->
            <id.pemkot.pot.spinner.MaterialSpinner
                android:id="@+id/spinnerinstansi"
                app:ms_dropdown_max_height="350dp"
                app:ms_dropdown_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="Kategori"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"
                />

            <!-- Spinner Element -->
            <id.pemkot.pot.spinner.MaterialSpinner
                android:id="@+id/spinnerkategori"
                app:ms_dropdown_max_height="350dp"
                app:ms_dropdown_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="Rahasia Identitas? :"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"
                />

            <!-- Spinner Element -->
            <id.pemkot.pot.spinner.MaterialSpinner
                android:id="@+id/spinnerrahasiaid"
                app:ms_dropdown_max_height="350dp"
                app:ms_dropdown_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="Rahasia Pengaduan/Saran/Keluhan"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"
                />

            <!-- Spinner Element -->
            <id.pemkot.pot.spinner.MaterialSpinner
            android:id="@+id/spinnerrahasiapengaduan"
            app:ms_dropdown_max_height="350dp"
            app:ms_dropdown_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnchoose"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="16dp"
                android:text="@string/chooseimage"
                android:textColor="@color/textbutton_color"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@color/colorPrimaryDark"/>

            <Button
                android:id="@+id/btnsimpan"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/kirim"
                android:textColor="@color/textbutton_color"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@color/colorPrimaryDark"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>